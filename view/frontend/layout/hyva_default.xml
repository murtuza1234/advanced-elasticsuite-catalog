        <referenceBlock name="category.products.list">
            <action method="setTemplate">
                <argument name='template' xsi:type='string'>Shellpea_AdvancedElasticsuiteCatalog::product/list.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock class="Shellpea\AdvancedElasticsuiteCatalog\Block\ListProduct" name="search_result_list">
