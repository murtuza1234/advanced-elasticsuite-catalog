                <argument name='template' xsi:type='string'>Shellpea_AdvancedElasticsuiteCatalog::product/list.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="catalog.leftnav">
            <action method="setTemplate">
                <argument name='template' xsi:type='string'>Shellpea_AdvancedElasticsuiteCatalog::catalog/layer/view.phtml</argument>
            </action>
